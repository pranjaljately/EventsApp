<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/ListEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ListEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/ListEventTime"
            android:paddingLeft="15dp"
            android:text="Date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ListEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editButton"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:text="Time"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/deletebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ListEventName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:cropToPadding="false"
            android:src="@android:drawable/ic_delete"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"/>

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/deletebutton"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/deletebutton"
            android:layout_toStartOf="@+id/deletebutton"
            android:background="@null"
            android:src="@android:drawable/ic_menu_edit" />


    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>